@page "/states"
@model StatesModel
@{
    ViewData["Title"] = "States";
}

<h2>States</h2>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                States
            </div>
            <div class="card-body">
                <ul class="list-group-flush">
                    @foreach (State state in @Model.States)
                    {
                        <li class="list-group-item"><a asp-page="/state" asp-route-state="@state.StateNameForRoute">@state.StateName</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
